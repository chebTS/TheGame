<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_pressed="true"
        android:drawable="@drawable/hurt_on"/> //currently pressed turning the toggle on
    <item android:state_pressed="true"
        android:drawable="@drawable/hurt_on"/> //currently pressed turning the toggle off
    <item android:state_checked="true"
        android:drawable="@drawable/hurt_on"/> //not pressed default checked state
    <item android:drawable="@drawable/hurt_off"/> //default non-pressed non-checked
</selector>